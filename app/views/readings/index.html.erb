<h1>Lista odczytów</h1>

<table>
  <thead>
    <tr>
      <th>Data</th>
      <th>Zimna woda</th>
      <th>Centralne ogrzewanie</th>
      <th>Ciepła woda</th>
      <th>Elektryka</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @readings.each do |reading| %>
      <tr>
        <td><%= reading.read_at %></td>
        <td><%= reading.cold_water %></td>
        <td><%= reading.central_heating %></td>
        <td><%= reading.hot_water %></td>
        <td><%= reading.electricity %></td>
                <td><%= link_to 'Pokaż', reading %></td>
        <td><%= link_to 'Edytuj', edit_reading_path(reading) %></td>
        <td><%= link_to 'Usuń', reading, method: :delete, data: { confirm: 'Jesteś pewien?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nowy odczyt', new_reading_path %>
