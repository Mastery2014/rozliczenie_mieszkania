<h1>Lista zapłat</h1>

<table>
  <thead>
    <tr>
      <th>Data</th>
      <th>Kwota</th>
      <th>Klient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.date %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.client_id %></td>
        <td><%= link_to 'Pokaż', payment %></td>
        <td><%= link_to 'Edytuj', edit_payment_path(payment) %></td>
        <td><%= link_to 'Usuń', payment, method: :delete, data: { confirm: 'Jesteś pewien?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nowa płatność', new_payment_path %>
