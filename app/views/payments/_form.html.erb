<%= simple_form_for(@payment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date, label: 'Data' %>
    <%= f.input :amount, label: 'Kwota' %>
    <%= f.input :client_id, label: 'Klient' %>
      </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
